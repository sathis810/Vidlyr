@model IEnumerable<Vidlyr.Models.Customer>


@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>
@if (!Model.Any())
{
    <h1>We Don't Have Customers Yet</h1>
}
else
{
    <table class="table table-striped table-hover ">
        <thead>
        <tr>
            <th>Customers</th>
            <th>DiscountType</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@Html.ActionLink(customer.Name, "Edit", "Customer", new {id = customer.Id}, null)</td>
                <td>@customer.MembershipType.MemberShipType</td>
            </tr>
        }
        </tbody>
    </table>
}